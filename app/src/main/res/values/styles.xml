<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightThemeColorPrimaryDark</item>
        <item name="colorAccent">@color/lightThemeColorAccent</item>
        <item name="android:windowBackground">@color/lightThemeWindowBackground</item>
    </style>

    <style name="LightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LightTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DarkTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkThemeColorPrimaryDark</item>
        <item name="colorAccent">@color/darkThemeColorAccent</item>
        <item name="android:windowBackground">@color/darkThemeWindowBackground</item>
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DarkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FontIcon" parent="TextAppearance.AppCompat" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/weathericons_regular</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>
    <style name="SmallFontIcon" parent="FontIcon" >
        <item name="android:textSize">24sp</item>
    </style>
    <style name="MediumFontIcon" parent="FontIcon" >
        <item name="android:textSize">40sp</item>
    </style>
    <style name="LargeFontIcon" parent="FontIcon" >
        <item name="android:textSize">72sp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline3</item>
    </style>

    <style name="MainWeather" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/actionMenuTextColor</item>
    </style>

    <style name="WeatherDetails" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
