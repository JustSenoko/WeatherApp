<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorAccent"> @color/lightThemeColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightThemeColorPrimaryDark</item>
        <item name="colorSecondary">@color/lightThemeColorSecondary</item>
        <item name="android:windowBackground">@color/lightThemeWindowBackground</item>
    </style>

    <style name="LightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LightTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DarkTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/darkThemeTextColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkThemeColorPrimaryDark</item>
        <item name="colorSecondary">@color/darkThemeColorSecondary</item>
        <item name="android:textColorPrimary">@color/darkThemeTextColorPrimary</item>
        <item name="colorAccent">@color/darkThemeColorPrimary</item>
        <item name="android:textColorSecondary">@color/darkThemeTextColorPrimary</item>
        <item name="android:windowBackground">@color/darkThemeWindowBackground</item>
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FontIcon" parent="TextAppearance.AppCompat.Title" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/weather_icons_regular</item>
    </style>
    <style name="SmallFontIcon" parent="FontIcon" >
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>
    <style name="MediumFontIcon" parent="FontIcon" >
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="LargeFontIcon" parent="FontIcon" >
        <item name="android:textSize">72sp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="MainWeather" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/FontIcon</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="WeatherDetails" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WeatherListItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsItem" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
