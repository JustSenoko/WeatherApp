<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:gravity="center_vertical">

    <Switch
        android:id="@+id/darkTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/theme"
        android:textSize="@dimen/settings_type_size" />

    <Switch
        android:id="@+id/units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/imperial_units"
        android:textSize="@dimen/settings_type_size" />

    <TextView
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settings_vertical_margin"
        android:text="@string/show"
        android:textSize="@dimen/settings_type_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/settings_horizontal_margin"
        android:orientation="vertical">

        <Switch
            android:id="@+id/show_wind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wind"
            android:textSize="@dimen/settings_type_size" />

        <Switch
            android:id="@+id/show_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pressure"
            android:textSize="@dimen/settings_type_size" />
    </LinearLayout>

</LinearLayout>