<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selected_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/theme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:onClick="themeOnClick"
        android:showText="true"
        android:textSize="@dimen/settings_type_size"
        android:text="@string/theme"
        android:textOff="@string/light"
        android:textOn="@string/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <LinearLayout
        android:id="@+id/city_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/theme">

        <TextView
            android:id="@+id/city_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/city_label"
            android:textSize="@dimen/settings_type_size" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/current_city"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectCity"
            android:textSize="16sp"
            android:text="@string/city" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/units"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settings_vertical_margin"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/city_name"
        app:layout_constraintTop_toBottomOf="@id/city_name">

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select_unit"
            android:textSize="@dimen/settings_type_size"
            tools:layout_editor_absoluteY="40dp" />

        <Spinner
            android:id="@+id/spinner_units"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/settings_type_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/show"
        android:textSize="@dimen/settings_type_size"
        app:layout_constraintStart_toStartOf="@id/units"
        app:layout_constraintTop_toBottomOf="@+id/units" />

    <Switch
        android:id="@+id/show_pressure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/settings_horizontal_margin"
        android:layout_marginTop="@dimen/settings_vertical_margin"
        android:layout_marginEnd="40dp"
        android:onClick="showPressureOnClick"
        android:text="@string/pressure"
        android:textSize="@dimen/settings_type_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/show"
        app:layout_constraintTop_toBottomOf="@+id/show" />

    <Switch
        android:id="@+id/show_wind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settings_vertical_margin"
        android:layout_marginEnd="40dp"
        android:onClick="showWindOnClick"
        android:text="@string/wind"
        android:textSize="@dimen/settings_type_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/show_pressure"
        app:layout_constraintTop_toBottomOf="@+id/show_pressure" />

    <Switch
        android:id="@+id/show_feels_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settings_vertical_margin"
        android:layout_marginEnd="40dp"
        android:onClick="showFeelsLikeOnClick"
        android:text="@string/feels_like"
        android:textSize="@dimen/settings_type_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/show_wind"
        app:layout_constraintTop_toBottomOf="@+id/show_wind" />


</androidx.constraintlayout.widget.ConstraintLayout>